:host
  background -webkit-linear-gradient(left, #25c481, #25b7c4)
  background linear-gradient(to right, #25c481, #25b7c4)
  display block

:host > div
  margin-bottom 20px

:host
  table
    width 100%
    table-layout fixed

    > thead
      background-color rgba(255,255,255,0.3)
      border-bottom 1px solid rgba(255,255,255,0.3)

      th
        padding 20px 15px
        text-align left
        font-weight 500
        font-size 12px
        color #fff
        text-transform uppercase

:host
  main
    position relative
    overflow-x hidden

    > table
      display flex
      flex-flow column
      width: 100%
      margin-bottom 0

      tbody
        flex: 1 1 auto

        tr
          width 100%
          display table
          table-layout fixed
          position absolute

          td
            height 39px
            padding 0 15px
            text-align left
            vertical-align middle
            font-weight 300
            font-size 12px
            color #fff
            border-bottom solid 1px rgba(255,255,255,0.1)

:host main::-webkit-scrollbar
  width 6px
:host main::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
:host main::-webkit-scrollbar-thumb
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)