file(name, ext, path)
  path + '/' + name + '.' + ext

font-face(family, font=family, path='fonts', weight=400, style='normal')
  @font-face
    font-family family
    src url(file(font, 'ttf', path)) format("truetype")
    font-weight weight
    font-style style

font-face-inline(family, font=family, path='fonts', weight=400, style='normal')
  @font-face
    font-family family
    src url(file(font, 'eot?', path)) format("embedded-opentype")
  @font-face
    font-family family
    src url(file(font, 'woff', path)) format("woff"), url(file(font, 'ttf', path)) format("truetype")
    font-weight weight
    font-style style